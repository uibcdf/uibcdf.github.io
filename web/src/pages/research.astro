---
import { getCollection } from 'astro:content';
import ContentCard from '../components/ContentCard.astro';
import BaseLayout from '../layouts/BaseLayout.astro';

const researchLines = (await getCollection('research', ({ data }) => !data.draft)).sort(
  (a, b) => b.data.date.getTime() - a.data.date.getTime(),
);
---

<BaseLayout
  title="Research"
  description="Core lines of work in computational biophysics, biomolecular modeling, and method development."
  ctaLabel="Meet the team"
  ctaHref="/people"
>
  {
    researchLines.length === 0 ? (
      <p class="card">No published research lines yet.</p>
    ) : (
      <div class="grid">
        {researchLines.map((entry) => (
          <ContentCard
            title={entry.data.title}
            summary={entry.data.summary}
            date={entry.data.date}
            tags={entry.data.tags}
          />
        ))}
      </div>
    )
  }
</BaseLayout>
