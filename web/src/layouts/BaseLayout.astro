---
import '../styles/global.css';

interface Props {
  title: string;
  description: string;
  ctaLabel?: string;
  ctaHref?: string;
  ogImage?: string;
  subtitle?: string;
  heroClass?: string;
  hideFooter?: boolean;
}

const { title, description, ctaLabel, ctaHref, ogImage, subtitle, heroClass, hideFooter } =
  Astro.props;
const isHomeHero = heroClass?.includes('home-hero') ?? false;
const pageTitle = `${title} | UIBCDF`;
const canonicalUrl = Astro.url.href;
const ogImageUrl = new URL(ogImage ?? '/og-default.svg', Astro.site).toString();

const allNavItems = [
  { href: '/', label: 'Home' },
  { href: '/research', label: 'Research' },
  { href: '/team', label: 'Team' },
  { href: '/publications', label: 'Publications' },
  { href: '/software', label: 'Code' },
  { href: '/updates', label: 'Updates' },
  { href: '/contact', label: 'Contact' },
];

const normalizePath = (value: string) => value.replace(/\/+$/, '') || '/';
const currentPath = normalizePath(Astro.url.pathname);
const navItems = allNavItems.filter((item) => normalizePath(item.href) !== currentPath);
---
<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <meta name="robots" content="index,follow" />
    <meta name="theme-color" content="#0b6457" />
    <meta name="description" content={description} />
    <link rel="canonical" href={canonicalUrl} />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png" />
    <link rel="icon" type="image/png" sizes="192x192" href="/favicon-192x192.png" />
    <link rel="apple-touch-icon" sizes="192x192" href="/favicon-192x192.png" />
    <title>{pageTitle}</title>

    <meta property="og:type" content="website" />
    <meta property="og:site_name" content="UIBCDF" />
    <meta property="og:title" content={pageTitle} />
    <meta property="og:description" content={description} />
    <meta property="og:url" content={canonicalUrl} />
    <meta property="og:image" content={ogImageUrl} />

    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={pageTitle} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={ogImageUrl} />
  </head>
  <body class:list={[!isHomeHero && 'internal-page']}>
    <header class="site-header">
      <a class="brand" href="/" aria-label="UIBCDF home">
        <img src="/logo-uibcdf.svg" alt="UIBCDF" />
      </a>
      <nav aria-label="Main navigation">
        <ul>
          {navItems.map((item) => (
            <li><a href={item.href}>{item.label}</a></li>
          ))}
        </ul>
      </nav>
    </header>
    <div class:list={['page-shell', !isHomeHero && 'internal-page-shell']}>
      <main>
        <section class:list={['hero', heroClass]}>
          <h1>{title}</h1>
          {!isHomeHero && <span class="hero-separator" aria-hidden="true"></span>}
          {subtitle && <p class="hero-subtitle">{subtitle}</p>}
          <p>{description}</p>
          {ctaLabel && ctaHref && <a class="cta" href={ctaHref}>{ctaLabel}</a>}
        </section>
        <section class="content">
          <slot />
        </section>
      </main>
      {
        !hideFooter && (
          <footer>
            <p>
              Computational Biology and Drug Design Research Unit · Federico Gómez Children's
              Hospital of Mexico · Mexican National Institute of Health
            </p>
          </footer>
        )
      }
    </div>
    {
      !isHomeHero && (
        <script>
          const root = document.documentElement;
          const header = document.querySelector('.site-header');
          const shell = document.querySelector('.internal-page-shell');

          const syncOcclusionHeight = () => {
            if (!header) return;
            const headerRect = header.getBoundingClientRect();
            const descendants = Array.from(header.querySelectorAll('*'));
            let visualBottom = headerRect.bottom;
            for (const element of descendants) {
              const rect = element.getBoundingClientRect();
              if (rect.bottom > visualBottom) visualBottom = rect.bottom;
            }
            // +1px avoids thin seams caused by subpixel rounding on some displays.
            const occlusion = Math.ceil(visualBottom - headerRect.top) + 1;
            root.style.setProperty('--internal-occlusion-height', `${occlusion}px`);
          };

          const scrollToHashTarget = (smooth = false) => {
            const hash = window.location.hash;
            if (!hash || hash.length < 2 || !shell) return;
            const target = document.getElementById(decodeURIComponent(hash.slice(1)));
            if (!target) return;

            const shellRect = shell.getBoundingClientRect();
            const targetRect = target.getBoundingClientRect();
            const top = targetRect.top - shellRect.top + shell.scrollTop - 10;
            shell.scrollTo({
              top: Math.max(0, top),
              behavior: smooth ? 'smooth' : 'auto',
            });
          };

          window.addEventListener('hashchange', () => scrollToHashTarget(true));
          window.addEventListener('resize', syncOcclusionHeight);
          window.addEventListener('load', syncOcclusionHeight);

          if ('fonts' in document) {
            document.fonts.ready.then(syncOcclusionHeight).catch(() => {});
          }

          document.addEventListener('click', (event) => {
            const link = event.target instanceof Element ? event.target.closest('a[href^="#"]') : null;
            if (!link) return;
            const href = link.getAttribute('href') ?? '';
            if (href.length < 2) return;
            event.preventDefault();
            if (window.location.hash === href) {
              scrollToHashTarget(true);
              return;
            }
            history.pushState(null, '', href);
            scrollToHashTarget(true);
          });

          // Run after layout/paint so offsets are stable.
          requestAnimationFrame(() => {
            syncOcclusionHeight();
            scrollToHashTarget(false);
          });
        </script>
      )
    }
  </body>
</html>
